{
	"name": "web-next",
	"version": "0.1.0",
	"private": true,
	"sideEffects": false,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"type-check": "tsc --noEmit",
		"types": "cd ../../packages/supabase && pnpm run generate-types-local",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"lighthouse": "lhci autorun",
		"lighthouse:ci": "lhci autorun --collect.url=http://localhost:3000",
		"lighthouse:mobile": "lhci autorun --collect.settings.preset=mobile",
		"lighthouse:production": "lhci autorun --config=lighthouserc.production.json",
		"perf": "npm run build && npm run start & sleep 10 && npm run lighthouse:ci && pkill -f 'next start'",
		"perf:mobile": "npm run build && npm run start & sleep 10 && npm run lighthouse:mobile && pkill -f 'next start'",
		"perf:production": "npm run lighthouse:production",
		"postbuild": "pnpm exec next-sitemap || echo 'sitemap generation skipped'",
		"sitemap": "pnpm exec next-sitemap"
	},
	"dependencies": {
		"@hookform/resolvers": "^3.3.4",
		"@pickid/shared": "workspace:*",
		"@pickid/supabase": "workspace:*",
		"@pickid/ui": "workspace:*",
		"@supabase/supabase-js": "^2.58.0",
		"@tanstack/react-query": "^5.90.2",
		"@tanstack/react-query-devtools": "^5.90.2",
		"clsx": "^2.1.1",
		"embla-carousel-autoplay": "^8.6.0",
		"next": "15.5.2",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-hook-form": "^7.51.0",
		"sonner": "^2.0.7",
		"swiper": "^12.0.2",
		"tailwind-merge": "^3.3.1",
		"zod": "^3.23.8",
		"zustand": "^5.0.5"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3",
		"@lhci/cli": "^0.12.0",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/jest": "^30.0.0",
		"@types/node": "^20",
		"@types/react": "^18.2.0",
		"@types/react-dom": "^18.2.0",
		"autoprefixer": "10.4.21",
		"eslint": "^9",
		"eslint-config-next": "15.5.2",
		"jest": "^30.2.0",
		"jest-environment-jsdom": "^30.2.0",
		"next-sitemap": "^4.2.3",
		"postcss": "8.5.6",
		"tailwindcss": "3.4.17",
		"ts-jest": "^29.4.5",
		"typescript": "^5"
	}
}
