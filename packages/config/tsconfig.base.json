{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": false,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "allowJs": false,
        "baseUrl": "."
    }
}
